[doc8]
# Maximum line length
max-line-length = 120

# Allow long titles for index files
allow-long-titles = True

# Ignore certain files/directories
ignore = 
    _build
    .git
    .venv
    venv
    __pycache__

# Ignore certain error codes (only the most common ones)
ignore-errors = 
    D001  # no-contents (for index files)
    D002  # no-trailing-spaces (allow in code blocks)
    D003  # no-trailing-whitespace (allow in code blocks)
    D004  # no-hard-tabs (allow in code blocks)
    D005  # no-trailing-blank-lines (allow at end of file)
    D006  # no-leading-blank-lines (allow at start of file)
    D007  # no-missing-blank-lines (allow in lists)
    D008  # no-missing-blank-lines (allow in code blocks)
